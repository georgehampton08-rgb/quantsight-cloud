# QuantSight Cloud Run Environment Configuration
# ==============================================
# This file should be deployed to Cloud Run as Secrets or mounted via Secret Manager

# === Firebase Configuration ===
GOOGLE_APPLICATION_CREDENTIALS=/app/firebase_credentials.json
FIREBASE_PROJECT_ID=quantsight-prod

# === Live Telemetry Configuration ===
SSE_POLL_INTERVAL=10
ALPHA_SPIKE_TTL=300
ENABLE_FIREBASE_SHADOW_WRITES=true

# === NBA API Configuration ===
NBA_API_TIMEOUT=30
NBA_API_MAX_RETRIES=3

# === Cloud Run Configuration ===
PORT=8080
LOG_LEVEL=INFO

# === Database Configuration ===
# Cloud Run uses Firestore (no SQLite)
USE_FIRESTORE=true
USE_SQLITE=false

# === CORS Configuration ===
ALLOWED_ORIGINS=https://quantsight.app,https://quantsight-prod.web.app

# === Cache Configuration ===
CACHE_TTL_SECONDS=60
ENABLE_RESPONSE_CACHE=true
